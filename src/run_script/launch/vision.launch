<launch>

    <machine name="local" address="localhost" default="true"/>

    <arg name="machine" default="local"/>
    <arg name="record" default="false"/>
    <arg name="debug" default="false"/>

    <env name="ROSCONSOLE_CONFIG_FILE"
        value="$(find run)/config/rosconsole_debug.config" if="$(arg debug)"/>
    <env name="ROSCONSOLE_CONFIG_FILE"
        value="$(find run)/config/rosconsole_info.config" unless="$(arg debug)"/>

    <include file="$(find run)/launch/record.launch">
        <arg name="record" value="$(arg record)"/>
        <arg name="bag_name" value="vision"/>
    </include>

    <include file="$(find avt_vimba_camera)/launch/two_cameras_robosub.launch"/>
    <include file="$(find dsp)/launch/dsp.launch"/>
    <include file="$(find vision)/launch/vision.launch"/>
    <include file="$(find run)/launch/video_server.launch"/>
</launch>