<launch>

    <machine name="local" address="localhost" default="true"/>
    <arg name="machine" default="local" />

    <arg name="record_data" default="true" />
    <arg name="data_path" default="$(find motion)/../../storage/mission" />

    <node name="data_record" pkg="rosbag" type="record" 
    args="-a -o $(arg data_path)" if="$(arg record_data)"/>
    
    <include file="$(find mission)/launch/mission.launch"/>
    <include file="$(find run)/launch/base.launch"/>
</launch>